{
  "name": "webwiz",
  "version": "0.1.0",
  "description": "AI-powered landing page generator from natural language specifications",
  "main": "dist/index.js",
  "bin": {
    "webwiz": "./dist/cli.js"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "cli": "tsx src/cli.ts",
    "build:cli": "tsup src/cli.ts --format esm,cjs --dts",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug"
  },
  "keywords": [
    "website-generator",
    "landing-page",
    "ai",
    "claude",
    "nextjs",
    "no-code"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "inquirer": "^9.2.0",
    "next": "^14.2.0",
    "ora": "^8.0.1",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "sharp": "^0.33.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.19.25",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "autoprefixer": "^10.4.0",
    "c8": "^10.1.3",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.2.0",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.2.0",
    "playwright": "^1.56.1",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
